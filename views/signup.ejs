            $('#myModal').on('hidden.bs.modal');
        </script>
    </head>
    <body>
        <header>
            <nav id="nav" class="navbar">
                <div class="container">
                    <div class="navbar-header">
                        <div class="navbar-brand">
                            <a href="/registration">
                                <img class="logo" src="../img/logo.png" alt="logo">
                                <img class="logo-alt" src="../img/logo-alt.png" alt="logo">
                            </a>
                        </div>        
                        <div class="nav-collapse">
                            <span></span>
                        </div>
                    </div>
                    <ul class="main-nav nav navbar-nav navbar-right">
                        <li><a href="/">Welcome!</a></li>
                        <li><a href="/registration">About</a></li>
                        <li><a href="/contact">ContactUS</a></li>
                    </ul>
                </div>
            </nav>
        </header>
	    <div class="section md-padding">
		    <div class="container">
			    <div class="row">
				    <div class="section-header text-center">
					    <h2 class="title">SignUp</h2>
				    <div>
                    <form method="post" enctype="multipart/form-data" action="/registration/signup">
                    <div>
                        <p>*Fill all the fields</p>
                        <label>Upload your profile pic</label><br>
                        <input type="file" name="avatar" required>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Name</label><br>
                        <input type="text" class="form-control" placeholder="Name" name="name" required>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Username</label><br>
                        <input type="text" class="form-control" placeholder="Username" name="username" required>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Email</label><br>
                        <input type="email" class="form-control" placeholder="Email" name="email" required>
                    </div>
                    <br><br>
                    <div>
                        <label>DateOfBirth</label><br>
                        <input type="date" name="dob" required>
                    </div>
                    <br><br>
                    <div>
                        <label>Gender</label><br>
                        <select name="gender">
                            <option value="male">Male</option>
                            <option value="Female">Female</option>
                            <option value="others">Others</option>
                        </select>
                    </div>
                    <br><br>
                    <div>
                        <label>Add your Bio</label><br>
                        <textarea rows="4" cols="30" class="input" placeholder="Write about yourself.." name="bio" autofocus required></textarea>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Contact</label><br>
                        <input type="contact" class="form-control" placeholder="Contact" name="contact" required>
                    </div><br><br>
                    <div class="form-group">
                        <label>Password</label><br>
                        <input type="password" class="form-control" placeholder="Password" name="password" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <label>Confirm Password</label><br>
                        <input type="password" class="form-control" placeholder="Password" name="password2" required>
                    </div>
                    <br><br>
                    <button type="submit" class="btn btn-default"><b>Submit</b></button>
                    <br>
                    <a href="/registration/signin">If already signed up, then click here to signIN</a>
                </form>        
                </div>
            </div>
		</div>
	</div>
