                        <input type="file" name="avatar"/>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Name</label><br>
                        <input type="text" class="form-control" placeholder="Name" name="name">
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Username</label><br>
                        <input type="text" class="form-control" placeholder="Username" name="username">
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Email</label><br>
                        <input type="email" class="form-control" placeholder="Email" name="email">
                    </div>
                    <br><br>
                    <div>
                        <label>DateOfBirth</label><br>
                        <input type="date" name="dob">
                    </div>
                    <br><br>
                    <div>
                        <label>Gender</label><br>
                        <select name="gender">
                            <option value="male">Male</option>
                            <option value="Female">Female</option>
                            <option value="others">Others</option>
                        </select>
                    </div>
                    <br><br>
                    <div>
                        <label>Add your Bio</label><br>
                        <textarea rows="4" cols="30" class="input" placeholder="Write about yourself.." name="bio" autofocus></textarea>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Contact</label><br>
                        <input type="contact" class="form-control" placeholder="Contact" name="contact">
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label>Password</label><br>
                        <input type="password" class="form-control" placeholder="Password" name="password">
                    </div><br>
                    <div class="form-group">
                        <label>Confirm Password</label><br>
                        <input type="password" class="form-control" placeholder="Password" name="password2">
                    </div>
                    <br><br>
                    <button type="submit" class="btn btn-default"><b>Submit</b></button>
                </form><br>                
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
  </div>
</body>
</html>